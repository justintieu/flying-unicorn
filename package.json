{
    "name": "flying-unicorn",
    "version": "1.0.1",
    "description": "Inserts a unicorn into your page!",
    "scripts": {
        "build": "npm run lint && webpack --mode production",
        "commit": "cz",
        "dev": "webpack --mode development --watch",
        "format": "prettier --write \"./**/*.js\" \"public/**/*.html\" \"./**/*.json\" \"./**/*.mjs\"",
        "lint-staged": "lint-staged",
        "lint:fix": "eslint . --fix",
        "lint": "eslint .",
        "package": "node scripts/package.mjs",
        "prepare": "husky",
        "release": "npm run build && npm run package",
        "semantic-release": "semantic-release"
    },
    "dependencies": {
        "archiver": "^7.0.1",
        "dotenv": "^16.4.7",
        "lint-staged": "^15.4.3"
    },
    "devDependencies": {
        "@babel/core": "^7.26.9",
        "@babel/preset-env": "^7.26.9",
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@commitlint/cz-commitlint": "^19.5.0",
        "@eslint/js": "^9.22.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/exec": "^7.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^11.0.1",
        "@semantic-release/npm": "^12.0.1",
        "autoprefixer": "^10.4.20",
        "babel-loader": "^10.0.0",
        "commitizen": "^4.3.1",
        "copy-webpack-plugin": "^12.0.2",
        "css-loader": "^7.1.2",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-n": "^17.16.2",
        "eslint-webpack-plugin": "^5.0.0",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "postcss": "^8.5.3",
        "postcss-loader": "^8.1.1",
        "prettier": "^3.5.3",
        "semantic-release": "^24.2.3",
        "style-loader": "^4.0.0",
        "tailwindcss": "^3.4.17",
        "webpack": "^5.90.1",
        "webpack-cli": "^5.1.4"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "release": {
        "branches": [
            "main"
        ],
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "preset": "conventionalcommits"
                }
            ],
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            [
                "@semantic-release/npm",
                {
                    "npmPublish": false
                }
            ],
            [
                "@semantic-release/exec",
                {
                    "prepareCmd": "node ./scripts/updateManifest.mjs"
                }
            ],
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "manifest.json",
                        "package.json",
                        "CHANGELOG.md"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]"
                }
            ],
            "@semantic-release/github"
        ]
    },
    "lint-staged": {
        "**/*.{js,css,html,md}": "prettier --write",
        "src/**/*.{js,mjs}": "eslint --fix",
        "scripts/**/*.{js,mjs}": "eslint --fix"
    }
}
